{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ContextBundle",
  "type": "object",
  "additionalProperties": true,
  "required": ["events"],
  "properties": {
    "version": {
      "type": "string"
    },
    "agents": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/agent"
      },
      "description": "Agents involved in the case (including court agents if you want to audit them)."
    },
    "result": {
      "$ref": "#/$defs/result"
    },
    "feedback": {
      "$ref": "#/$defs/feedback"
    },
    "source": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "system": { "type": "string" },
        "project": { "type": "string" },
        "repo": { "type": "string" },
        "branch": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/event"
      }
    }
  },
  "$defs": {
    "agent": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string" },
        "role": { "type": "string", "description": "Free-form role name." },
        "prompt": { "$ref": "#/$defs/prompt" },
        "meta": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "prompt": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "version": { "type": "string" },
        "content": { "type": "string" },
        "meta": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "result": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "status": { "type": "string", "description": "Example: success, failure, partial." },
        "summary": { "type": "string" },
        "metrics": {
          "type": "object",
          "additionalProperties": true
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "feedback": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "summary": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "object", "additionalProperties": true }
            ]
          }
        }
      }
    },
    "event": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "actor_type", "event_type", "content"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "ts": { "type": "string", "format": "date-time" },
        "actor_type": {
          "type": "string",
          "enum": ["human", "ai", "tool", "system"]
        },
        "actor_id": { "type": "string" },
        "role": { "type": "string", "description": "Optional: role name for ai actors." },
        "event_type": { "type": "string", "minLength": 1 },
        "content": { "type": "string" },
        "meta": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
